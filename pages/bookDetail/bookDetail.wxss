/* pages/bookDetail/bookDetail.wxss */

page {
  background: #f5f5f5;
}

.st {
  overflow: hidden;
  white-space: nowrap;
}

.left {
  display: inline-block;
}

.header {
  background: #fff;
}

.page-section {
  padding: 20rpx 48rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.dateil-hd {
  height: 300rpx;
  font-size: 0.7rem;
  line-height: 1.1rem;
  color: #9b9b9b;
}

.name {
  color: #5db4fe;
}

.dateil-title {
  font-size: 1.1rem;
  line-height: 50rpx;
  height: 100rpx;
  overflow: hidden;
  font-weight: bold;
  color: #333;
  display: block;
}

.dateil-img {
  width: 190rpx;
  height: 256rpx;
  float: left;
  margin-right: 24rpx;
}

.btn-catalog {
  width: 576rpx;
  margin: 30px auto;
  border-color: #9b9b9b;
  color: #9b9b9b;
  height: 72rpx;
  line-height: 80rpx;
  background: #fff;
  font-size: 13px;
}

.dateil-text {
  font-size: 14px;
  color: #333;
  line-height: 1.5;
}

.lue {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
}

.open {
  color: #5db4fe;
  font-size: 0.8rem;
  text-align: right;
  display: block;
  margin-top: 10rpx;
}

.page-section1 {
  padding: 20rpx 30rpx;
  background: #fff;
  margin-bottom: 20rpx
}

.section-title {
  font-size: 0.8rem;
  color: #333;
}

.list {
  margin: 56rpx 0;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.list-item {
  box-sizing: border-box;
  width: 33.33%;
  padding: 2%;
}

.item-img {
  width: 100%;
}

.item-title {
  font-size: 15px;
  color: #555;
  line-height: 1.25;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: center;
  margin-bottom: 15rpx;
}

.foot {
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  text-align: center;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  overflow: hidden
}

.foot-l {
  width: 40%;
  line-height: 100rpx;
  float: left;
  color: #5db4fe;
}

.foot-r {
  flex: 1;
  line-height: 100rpx;
  float: right;
}
.foot-r button{
  background:#5db4fe;
  color:#fff;
  border: 0;
  border-radius: 0;
  line-height: inherit;
  height: 105rpx
}
.foot-r button::after{
  content: none
}
.inShelf {
  background-color: #f5f5f5;
  color: #333;
}
.page-s2{
  padding-left: 30rpx;
  padding-bottom: 120rpx
}

.book-relate,.book_prop,.book_resoure{
  padding: 10rpx 0;
  font-size: .8rem;
  color: #888
}
.book_resoure text{
  color: #5db4fe
}
.book-relate{
  font-size: 1rem;
  color: #333
}