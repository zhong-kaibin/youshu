/* bookshelf.wxss */
.edit{
  color: #5db4fe;
  position: fixed;
  top: 2rpx;
  right: 30rpx;
  z-index: 100;
  background-color: #fff;
  padding: 3rpx
}
.page-list{
  margin: 30rpx 0;
  padding:0 30rpx 100rpx 30rpx;
}
.item{
  padding: 30rpx 0;
  border-bottom:1rpx solid #f5f5f5;
  line-height: 1.5;
  font-size: 0.8rem;
  position: relative;
  padding-left: 205rpx;
  height: 214rpx;
}
.item-img{
  position: absolute;
  top: 24rpx;
  left: 0;
  width: 160rpx;
  height: 214rpx;
  border: 1rpx solid #f5f5f5;
}
.item-name{
  display: block;
  font-size: 1rem;
  font-weight: bold;
  color: #333333;
  margin: 15rpx 0;
}
.item-detail{
  color: #9b9b9b; 
  font-size: 0.8rem;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; 
}
.label-box{
  margin: 15rpx 0;  
}
.btn{
  font-size: 0.8rem;
  width: 34%;
  margin-right: 5%;
  float: left;
  padding: 0;
}
.btn-catalog{
  background: #ffffff;
  color: #9b9b9b;
}
.btn-read{
  background: #5cb6ff;
  color: #ffffff;
}
.btn-checked-show{
  position: absolute;
  right: 6rpx;
  top: 100rpx;
}
.btn-checked-hide{
  display: none;
}
.foot{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-top:1rpx solid #f5f5f5;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #ffffff;
}
.foot text{
  width: 49%;
  display: block;
  float: left;
}
.select-all{
  border-right: 1rpx solid #f5f5f5;
  color: #5db4fe;
}
.del{
  color: #f92533; 
}