/* pages/rank.wxss */
.page-list{
  padding:0 30rpx;
}
.list{
  border-bottom: 1rpx solid #f5f5f5;
  padding: 37rpx 0 37rpx 215rpx;
  position: relative;
  height: 200rpx;
}
.list-img{
  width: 145rpx;
  height: 200rpx;
  position: absolute;
  top: 37rpx;
  left: 0;
}
.item{
  font-size: 0.8rem;
  color: #333333;
  line-height: 65rpx;
  width: 90%;
  display: inline-block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.item-title{
  margin-left: 20rpx;
}
.pot1{
  width: 40rpx;
  height:40rpx;
  text-align: center;
  line-height: 40rpx;
  display: inline-block;
  border-radius: 100%;
  background: #5db4fe;
  color: #ffffff;
}
.pot{
  width: 40rpx;
  height:40rpx;
  text-align: center;
  line-height: 40rpx;
  display: inline-block;
  border-radius: 100%;
  background: #c8c8c8;
  color: #ffffff;
}
.next-img{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 120rpx;
  right: 0rpx;
}