/* pages/recharge/recharge.wxss */
page{
  background: #f5f5f5;
}
.header{
  background: #ffffff;
}
.page-section{
  padding:30rpx 30rpx 0 30rpx;
  margin-bottom: 20rpx;
  background: #ffffff;
}
.list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
}
.list-item{
  width: 48%;
  border: 1rpx solid #9b9b9b;
  height: 200rpx;
  text-align: center;
  display: table-cell;
  vertical-align: middle;
  margin-bottom: 28rpx;
  color: #9b9b9b;
  font-size: 0.9rem;
  position: relative
}
.list-item.active{
  border: 2rpx solid #5db4fe;
  box-shadow: 0 0 20rpx #5db4fe
}
.item-limit{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: -5rpx;
  left: -5rpx;
}
.item-gold{
  white-space: nowrap;
  font-size: 24rpx;
}
.give .present{
  display: none
}
.item-present{
  color: #f92533;
  font-size: 24rpx;
}
.item-bottom{
  display: block;
  margin-top: -2rpx
}
/* .acitve */
.list-item text{
  line-height: 1.5;
}
.item-text{
  font-size: 1.2rem;
  color: #333333;
  margin-top:35rpx;
  display: block;
}
.list-item.on{
  border: 1rpx solid #5db4fe;
  color: #5db4fe;
}
.list-item.on .item-text{
  color: #5db4fe;
}
.pay-item{
  position: relative;
  padding: 30rpx 0 30rpx 80rpx;
  margin-top:20rpx;
  height:60rpx;
  line-height: 60rpx;
}
.pay-item-icon{
  position: absolute;
  top: 30rpx;
  left: 0;
  width: 60rpx;
  height: 60rpx;
}
.pay-radio{
  position: absolute;
  right: 0;
  top: 20rpx;
}
.btn-submit{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background: #5db4fe;
  color: #ffffff;
  margin: 30rpx auto;
  padding: 0;
}