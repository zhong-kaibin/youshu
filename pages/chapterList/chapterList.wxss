/* pages/chapterList/chapterList.wxss */
.reader-hd{
  background: #f5f5f5;
  font-size: 12px;
  color: #9b9b9b;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
}
.reader-hd text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  padding:0 30rpx;
}
.sort{
  float: right;
}
.page-section{
  padding: 80rpx 0 0 0;
}
.list-item{
  line-height: 2;
  padding: 10rpx 30rpx;
  font-size: 0.9rem;
  color: #333333;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.icon-free{
  width: .9rem;
  height: .9rem
}
.backtop{
  background: #9b9b9b;
  color: #ffffff;
  padding: 20rpx 30rpx;
  border-radius: 100%;
  position: fixed;
  right: 60rpx;
  bottom: 100rpx;
  font-size: 0.8rem;
}
.backtop text{
  display: block;
}
.complete{
  color: #666;
  font-size: 14px;
  display: block;
  line-height: 60rpx;
  text-align: center
}